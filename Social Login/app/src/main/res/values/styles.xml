<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //TextView

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:includeFontPadding">false</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    //Text Font Family

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/plusjakartasans_bold</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:fontFamily">@font/plusjakartasans_regular</item>
    </style>

    //TextSize
    //34 sp

    <style name="TextView.Bold.sp34">
        <item name="android:textSize">@dimen/_32ssp</item>
    </style>

    //18 sp

    <style name="TextView.Regular.sp18">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    //15 sp

    <style name="TextView.Regular.sp15">
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    //textColor

    <style name="TextView.Bold.sp34.Black">
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="TextView.Regular.sp15.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="TextView.Regular.sp18.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>

    //background

    <style name="TextView.Bold.sp34.Black.Background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_9sdp</item>
        <item name="android:paddingEnd">@dimen/_9sdp</item>
        <!--        <item name="android:background">@drawable/bg_button_view_password</item>-->
    </style>


    <style name="CustomFacebookLoginButtonStyle" parent="com_facebook_loginview_default_style">
        <!-- Customize the background to make it round -->
            <item name="android:background">@drawable/round_button_background</item>
        <!-- You can add more customizations here -->
    </style>
</resources>
