<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="colorAccent">@color/greyHint</item>-->
    </style>


    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="textViewList" parent="textView">
        <item name="android:fontFamily">@font/avenir_next_cyr_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="icon">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="button.wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>


    //Task

    <style name="textView.title">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="textView.title.add">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="textView.title.listTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textView.listDes">
        <item name="android:textColor">@color/grey</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontWeight" tools:targetApi="o">400</item>
    </style>

    <style name="textView.listDes.date">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="textView.title.listStartEnd">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_19ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="textView.title.listStartEnd.price">
        <item name="android:textColor">@color/blue</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="productListConstraintStartEnd">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_dateprice</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="productListConstraintStartEnd.price">
        <item name="android:backgroundTint">@color/grey_10per</item>
        <item name="android:layout_height">0dp</item>
        <item name="paddingEnd">@dimen/_5sdp</item>
    </style>


    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/blueAddText</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="themeTextInputLayout">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="textInputLayout">
        <item name="theme">@style/themeTextInputLayout</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/greyHint</item>
        <item name="hintTextColor">@color/greyHint</item>
        <item name="android:textColor">@color/blueAddText</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="textView.addImage">
        <item name="android:textColor">@color/greyBorder</item>
    </style>

    <style name="button.0dp">
        <item name="android:layout_width">0dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/greyHint</item>
    </style>

    <style name="DatePickerDialog" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <item name="colorAccent">@color/blue</item>
    </style>


    <style name="textView.wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textView.wrap.rate">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="textView.wrap.rate.name">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="textView.wrap.rate.black.title">
        <item name="android:textSize">@dimen/_25ssp</item>
    </style>

    <style name="textView.wrap.rate.black">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textView.wrap.rate.grey">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="textView.wrap.rate.description">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>

    <style name="textView.wrap.rate.different">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/greenBitcoin</item>
    </style>

    <style name="buttonBitCoin" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>


    //bottom App Bar
    <style name="BottomAppBarTheme" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:itemBackground">@android:color/black</item>
    </style>

    <style name="BottomBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    //floating Button

    <style name="floatingButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/fabStyle2</item>
    </style>

    <style name="fabStyle1" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="fabStyle2" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
    </style>

    <style name="fabStyle3" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>
    <style name="fabStyle4" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">30%</item>
        <item name="cornerFamily">cut</item>
    </style>
    <style name="fabStyle5" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="fabStyle6" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">80%</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerFamilyTopLeft">cut</item>
    </style>
    <style name="fabStyle7" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">80%</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>
</resources>
