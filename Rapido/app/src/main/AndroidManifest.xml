<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rapido.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.rapido.app.di.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.rapido.app.ui.activity.SplashActivity"
            android:theme="@style/Theme.RemoveSplashScreenTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rapido.app.ui.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.rapido.app.ui.activity.AuthActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustResize"
            android:name="com.rapido.app.ui.activity.IsolatedActivity"
            android:exported="false" />
    </application>

</manifest>