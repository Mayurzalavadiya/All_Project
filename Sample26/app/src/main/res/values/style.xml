<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryDark">@color/lightShadow</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>

    <style name="textviewTitle">
        <item name="android:enabled">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>



    <style name="textviewDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="bgContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_container</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_23sdp</item>
        <item name="android:paddingBottom">@dimen/_23sdp</item>
    </style>

    <style name="editTextHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="editTextOtp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="layout_constraintDimensionRatio">1</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:background">@drawable/bg_edittext_otp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="bgButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/black</item>
    </style>
</resources>