<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView" parent="Widget.AppCompat.TextView"/>

    <style name="textView.wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView.wrap.hint" >
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/addHintColor</item>
    </style>

    <style name="textView.wrap.t1">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textColorHint">@color/addHintColor</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/_9sdp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>