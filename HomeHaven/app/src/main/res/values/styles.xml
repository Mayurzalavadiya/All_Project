<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="StatusBar" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.StatusBarWhite">
        <item name="android:statusBarColor">@color/White</item>
    </style>


    //TextView

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:includeFontPadding">false</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    //Text Font Family

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>
    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="TextView.SemiBold">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    //TextSize
    //14 sp

    <style name="TextView.Regular.sp14">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextView.Bold.sp14">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    //16 sp

    <style name="TextView.Bold.sp16">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    //20 sp

    <style name="TextView.SemiBold.sp20">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="TextView.Regular.sp16">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    //32 sp

    <style name="TextView.Bold.sp32">
        <item name="android:textSize">@dimen/_28ssp</item>
    </style>

    //24 sp

    <style name="TextView.SemiBold.sp24">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    //18 sp

    <style name="TextView.Regular.sp18">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    //12 sp

    <style name="TextView.Regular.sp12">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    //10 sp
    <style name="TextView.Medium.sp12">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    //textColor

    <style name="TextView.Bold.sp16.colorPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Bold.sp16.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="TextView.Regular.sp16.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="TextView.Regular.sp16.colorPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Regular.sp16.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="TextView.SemiBold.sp20.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="TextView.Medium.sp12.White">
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="TextView.Bold.sp14.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>
    <style name="TextView.Bold.sp14.colorPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Regular.sp14.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="TextView.Regular.sp14.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="TextView.Regular.sp12.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="TextView.SemiBold.sp24.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="TextView.SemiBold.sp24.White">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="TextView.Bold.sp32.DarkGrey">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="TextView.Regular.sp18.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>


    //Button

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAlignment">center</item>
    </style>

    //Button Text Font Family

    <style name="Button.Bold">
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    //Button TextSize
    //16 sp

    <style name="Button.Bold.sp16">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    //Button textColor

    <style name="Button.Bold.sp16.White">
        <item name="android:textColor">@color/White</item>
    </style>

    //Button background

    <style name="Button.Bold.sp16.White.Background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomBar" parent="Theme.Material3.Light"/>
        <!-- Customize your theme here. -->

</resources>
