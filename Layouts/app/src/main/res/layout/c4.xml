<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_style"
        android:gravity="center"
        android:text="@string/one"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_style"
        android:gravity="center"
        android:text="@string/two"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/textview1"
        app:layout_constraintCircleAngle="335"
        app:layout_constraintCircleRadius="120dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_style"
        android:gravity="center"
        android:text="@string/three"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/textview1"
        app:layout_constraintCircleAngle="20"
        app:layout_constraintCircleRadius="160dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_style"
        android:gravity="center"
        android:text="@string/four"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/textview1"
        app:layout_constraintCircleAngle="35"
        app:layout_constraintCircleRadius="200dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_style"
        android:gravity="center"
        android:text="@string/five"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/textview1"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="160dp"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_style"
        android:gravity="center"
        android:text="@string/six"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/textview1"
        app:layout_constraintCircleAngle="100"
        app:layout_constraintCircleRadius="120dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_style"
        android:gravity="center"
        android:text="@string/seven"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/textview1"
        app:layout_constraintCircleAngle="140"
        app:layout_constraintCircleRadius="120dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>