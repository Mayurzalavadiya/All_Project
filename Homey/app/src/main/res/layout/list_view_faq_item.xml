<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_12px"
    android:padding="@dimen/_11sdp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textviewQuestion"
        style="@style/TextView.Bold.sp16.PrimaryBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_what_does_lorem_ipsum_mean"
        app:layout_constraintBottom_toTopOf="@id/textviewAnswer"
        app:layout_constraintEnd_toStartOf="@id/imageviewArrow"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textviewAnswer"
        style="@style/TextView.Bold.sp14.Gray"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:text="@string/textview_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textviewQuestion" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageviewArrow"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textviewQuestion"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/textviewQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/textviewQuestion"
        app:srcCompat="@drawable/down_arrow_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>