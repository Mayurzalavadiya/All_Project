<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textviewTitle"
            style="@style/TextView.Bold.sp24.PrimaryBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure want to logout?"
            android:textColor="@color/Black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textviewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your desire text"
            android:textColor="@color/Gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textviewTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLogout"
            style="@style/Button.Regular.sp16.White.Background"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Log Out"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintEnd_toStartOf="@id/buttonCancle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textviewDescription" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCancle"
            style="@style/Button.Regular.sp16.White.Background"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/Gray"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Cancle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonLogout"
            app:layout_constraintTop_toBottomOf="@id/textviewDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>