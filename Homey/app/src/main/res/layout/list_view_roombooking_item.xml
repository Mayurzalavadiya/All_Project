<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageviewIcon"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/textviewDetail"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/person_group_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/textviewDetail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textviewDetail"
        style="@style/TextView.Bold.sp14.PrimaryBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Adults"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageviewIcon" />

<!--
<View
    android:id="@+id/viewStart"
    android:layout_width="@dimen/_1sdp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="@id/textviewDetail"
    app:layout_constraintBottom_toBottomOf="@id/textviewDetail"
    android:background="@color/Gray"
    app:layout_constraintStart_toStartOf="parent"/>
-->

    <View
        android:id="@+id/viewEnd"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="0dp"
        android:background="@color/Gray"
        app:layout_constraintBottom_toBottomOf="@id/textviewDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textviewDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>