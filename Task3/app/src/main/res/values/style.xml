<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="textViewTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>


    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="imageviewLogin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@drawable/bg_login</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="layout_constraintDimensionRatio">1.5:1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>