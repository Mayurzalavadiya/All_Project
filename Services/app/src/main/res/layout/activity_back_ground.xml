<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backgroundService.activity.BackGroundActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStartServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_services"
        app:layout_constraintBottom_toTopOf="@id/buttonStopServices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStopServices"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/stop_services"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonStartServices" />


</androidx.constraintlayout.widget.ConstraintLayout>