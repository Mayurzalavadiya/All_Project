<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pushNotification.activity.NotificationActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSimpleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simple_notification"
        app:layout_constraintBottom_toTopOf="@id/buttonProgressNotification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonProgressNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_notification"
        app:layout_constraintBottom_toTopOf="@id/buttonReDirectNotification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSimpleNotification" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonReDirectNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/redirect_activity_nnotification"
        app:layout_constraintBottom_toTopOf="@id/buttonCustomNotification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonProgressNotification" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCustomNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonReDirectNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>