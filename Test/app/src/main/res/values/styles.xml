<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
    </style>

    <style name="textViewList" parent="textView">
        <item name="android:fontFamily">@font/avenir_next_cyr_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
    </style>


    <style name="icon">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="tint">@color/white</item>
    </style>


    <style name="bgContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_container</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
    </style>

    <style name="bgContainerText" parent="bgContainer">
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_18sdp</item>
        <item name="android:layout_marginEnd">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/_9sdp</item>
        <item name="cardElevation">0dp</item>
    </style>


    // product

    <style name="textViewTitleProduct">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="textViewProductList" parent="textViewTitleProduct">
        <item name="android:textSize">@dimen/_16ssp</item>
        <!--        <item name="android:fontFamily">@font/poppins_regular</item>-->
        <!--        <item name="android:fontWeight">600</item>-->
    </style>

    <style name="textViewTimeDateProductList" parent="hintTextViewAddProduct">
        <item name="android:textColor">@color/listviewText</item>
    </style>

    <style name="textViewTitleAddProduct" parent="textViewTitleProduct">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewLightProductList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/addHintColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="textViewPriceProductList" parent="textViewAddProduct">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/lightGreen</item>
    </style>

    <style name="hintTextViewAddProduct" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/addHintColor</item>
        <item name="hintTextColor">@color/addHintColor</item>
        <item name="android:textColor">@color/addHintColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="textViewAddProduct">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:textSize">@dimen/_14ssp</item>-->
        <!--        <item name="android:paddingTop">@dimen/_24sdp</item>-->
        <item name="android:textColor">@color/addTextColor</item>
        <item name="android:background">@color/white</item>
        <!--        <item name="android:fontFamily">@font/poppins_regular</item>-->
    </style>

    <style name="productConstraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_product_add</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="buttonProduct" parent="button">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/bg_product_button</item>
    </style>


    //Material

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="Widget.TextInputLayout.Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.App.Caption</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/addHintColor</item>
        <item name="hintTextColor">@color/addHintColor</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="InputTextFont" parent="">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //datepickerdialod theme

    <style name="DatePickerDialog" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
            <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>