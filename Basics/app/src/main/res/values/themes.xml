<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Basics" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Text_view">
        <item name="android:textColor">#72000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText_view">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#68000000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
