<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    //TextView

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:includeFontPadding">false</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    //Text Font Family

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.SemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    //TextSize
    //35 sp

    <style name="TextView.Bold.sp35">
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    //26 sp

    <style name="TextView.SemiBold.sp26">
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>
    //24 sp

    <style name="TextView.Regular.sp24">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    //32 sp

    <style name="TextView.Medium.sp32">
        <item name="android:textSize">@dimen/_28ssp</item>
    </style>

    //14 sp

    <style name="TextView.Regular.sp14">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    //12 sp

    <style name="TextView.Regular.sp12">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    //16 sp

    <style name="TextView.Regular.sp16">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    //18 sp

    <style name="TextView.Regular.sp18">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    //13 sp

    <style name="TextView.Regular.sp13">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>
    //9 sp

    <style name="TextView.Regular.sp9">
        <item name="android:textSize">@dimen/_7ssp</item>
    </style>

    //textColor

    <style name="TextView.Bold.sp35.colorPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Regular.sp18.colorAccent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextView.Regular.sp24.White">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="TextView.Regular.sp13.White">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="TextView.Regular.sp9.White">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="TextView.Regular.sp9.GreyLight">
        <item name="android:textColor">@color/GreyLight</item>
    </style>

    <style name="TextView.SemiBold.sp26.colorAccent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextView.Medium.sp32.colorAccent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextView.Regular.sp14.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="TextView.Regular.sp12.Grey">
        <item name="android:textColor">@color/Grey</item>
    </style>

    <style name="TextView.Regular.sp16.GreyLight">
        <item name="android:textColor">@color/GreyLight</item>
    </style>

    //background

    <style name="TextView.Bold.sp35.colorPrimary.Background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_9sdp</item>
        <item name="android:paddingEnd">@dimen/_9sdp</item>
        <!--             <item name="android:background">@drawable/bg_button_view_password</item>-->
    </style>

    //EditText

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    //EditText Font Family

    <style name="EditText.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    //EditText Size
    //16 sp

    <style name="EditText.Regular.sp16">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //EditText Color

    <style name="EditText.Regular.sp16.colorPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    //EditText background

    <style name="EditText.Regular.sp16.colorPrimary.Background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/ColorEdittext</item>
    </style>

    //Button

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAlignment">center</item>
    </style>

    //Button Text Font Family

    <style name="Button.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Button.SemiBole">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    //Button TextSize
    //16 sp

    <style name="Button.SemiBole.sp16">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    //14sp

    <style name="Button.SemiBole.sp14">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    //Button textColor

    <style name="Button.SemiBole.sp16.White">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="Button.SemiBole.sp14.White">
        <item name="android:textColor">@color/White</item>
    </style>

    //Button background

    <style name="Button.SemiBole.sp16.White.Background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.SemiBole.sp14.White.Background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

</resources>
